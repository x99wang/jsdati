<template>
  <div class="links-box">
    <dl v-for="link in links"
        :key="link.id">
      <dt>
        <h2>{{link.title}}</h2>
      </dt>
      <dd>
        <a v-for="item in items"
          :key="item.id"
          v-if="item.url != ''"
          :href="item.url"
          :title="item.name">{{item.name}}</a>
      </dd>
      <dd v-if="link.describe != ''"></dd>
    </dl>
  </div>
</template>

<script>
  function Link (id, name, url) {
    this.id = id
    this.name = name
    this.url = url
  }

  export default {
    name: 'LinksBox',
    props: {
      links: {
        type: Array,
        default: function () {
          return [{
            id: 0,
            title: '',
            tel: '',
            describe: '',
            link: [Link( 0, '', '', '', '')]
          }];
        }
      }
    }
  }
</script>

<style scoped>

</style>
